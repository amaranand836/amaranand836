# Rock Paper and Scissors Game Code

import random

def game(comp, you):
    if comp == you:
        return None
    elif comp == "r":
        if you == "s":
            return False
        elif you == "p":
            return True
    elif comp == "p":
        if you == "s":
            return True
        elif you == "r":
            return False
    elif comp == "s":
        if you == "r":
            return True
        elif you == "p":
            return False
            
print("Computer's Turn: Choose Rock(r) Paper(p) or Scissors(s)? ")
randomNo = random.randint(1, 3)
if randomNo == 1:
    comp = "r"
elif randomNo == 2:
    comp = "p"  
elif randomNo == 3:
    comp = "s"


you = input("Your Turn: Choose Rock(r) Paper(p) or Scissors(s)? ")
a = game(comp, you)

print(f"Computer Choose {comp}")
print(f"You Choose {you}")

if a == None:
    print("The game is tie!")
elif a:
    print("You Win!")
else:
    print("You Lose!")
